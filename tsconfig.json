{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": "",
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [ "ES6", "dom" ],
      "mapRoot": "./",
      "module": "ES6",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": false,
      "outDir": "./dist/out-tsc",
      "removeComments": false,
      "sourceMap": true,
      "skipLibCheck": true,
      "target": "es5",
      "types": ["node"]
    },
    "include": [
      "./src/**/*.*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  